{
	"name": "galasa-plugin",
	"displayName": "Galasa",
	"description": "",
	"publisher": "Galasa",
	"version": "0.8.0",
	"icon": "resources/GalasaLogo.png",
	"engines": {
		"vscode": "^1.44.0"
	},
	"homepage": "https://github.com/Microsoft/vscode-docker/blob/master/README.md",
	"categories": [
		"Debuggers"
	],
	"activationEvents": [
		"onView:galasa-testrunner",
		"onView:galasa-ras",
		"onCommand:galasa-test.refresh",
		"onCommand:galasa-test.debug",
		"onCommand:galasa-ras.refresh",
		"onCommand:galasa-ras.open",
		"onCommand:galasa-test.setupWorkspace",
		"onCommand:galasa-test.createExamples",
		"onCommand:galasa-ras.artifacts",
		"onCommand:galasa-ras.runlog",
		"onCommand:galasa-ras.delete",
		"onCommand:galasa-artifacts.open",
		"onDebug"
	],
	"main": "./out/extension",
	"contributes": {
		"commands": [
			{
				"command": "galasa-test.refresh",
				"title": "Refresh the process of looking for Galasa tests",
				"icon": "$(refresh)"
			},
			{
				"command": "galasa-test.debug",
				"title": "Debug Galasa test locally",
				"icon": "$(debug-start)"
			},
			{
				"command": "galasa-ras.refresh",
				"title": "Refresh the local RAS",
				"icon": "$(refresh)"
			},
			{
				"command": "galasa-ras.open",
				"title": "Open a file from the RAS",
				"icon": "$(go-to-file)"
			},
			{
				"command": "galasa-test.setupWorkspace",
				"title": "Setup Galasa Workspace",
				"icon": "$(root-folder)"
			},
			{
				"command": "galasa-test.createExamples",
				"title": "Create SimBank Examples",
				"icon": "$(file-code)"
			},
			{
				"command": "galasa-test.simbank",
				"title": "Launch Simbank",
				"icon": "$(rocket)"
			},
			{
				"command": "galasa-ras.runlog",
				"title": "Run Log"
			},
			{
				"command": "galasa-ras.artifacts",
				"title": "Artifacts"
			},
			{
				"command": "galasa-ras.delete",
				"title": "Delete"
			},
			{
				"command": "galasa-artifacts.open",
				"title": "Open",
				"icon": "$(go-to-file)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "galasa",
					"title": "Galasa",
					"icon": "/resources/GalasaLogo.svg"
				}
			]
		},
		"views": {
			"galasa": [
				{
					"id": "galasa-testrunner",
					"name": "Test Runner"
				},
				{
					"id": "galasa-ras",
					"name": "Local Runs"
				},
				{
					"id": "galasa-artifacts",
					"name": "Artifacts"
				}
			]
		},
		"configuration": {
			"title": "Galasa",
			"properties": {
				"galasa.maven-remote": {
					"type": "string",
					"default": "https://repo.maven.apache.org/maven2/",
					"description": "%galasavscode.config.galasa.maven-remote%"
				},
				"galasa.maven-local": {
					"type": "string",
					"default": "",
					"description": "%galasavscode.config.galasa.maven-local%"
				},
				"galasa.version": {
					"type": "string",
					"default": "LATEST",
					"description": "%galasavscode.config.galasa.version%"
				}
			}
		},
		"menus": {
			"view/title": [
				{
					"command": "galasa-test.refresh",
					"when": "view == galasa-testrunner",
					"group": "navigation@4"
				},
				{
					"command": "galasa-test.setupWorkspace",
					"when": "view == galasa-testrunner",
					"group": "navigation@3"
				},
				{
					"command": "galasa-test.createExamples",
					"when": "view == galasa-testrunner",
					"group": "navigation@2"
				},
				{
					"command": "galasa-test.simbank",
					"when": "view == galasa-testrunner",
					"group": "navigation@1"
				},
				{
					"command": "galasa-ras.refresh",
					"when": "view == galasa-ras",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "galasa-test.debug",
					"when": "view == galasa-testrunner",
					"group": "inline"
				},
				{
					"command": "galasa-ras.open",
					"when": "view == galasa-ras && viewItem == testartifact",
					"group": "inline"
				},
				{
					"command": "galasa-ras.runlog",
					"when": "view == galasa-ras"
				},
				{
					"command": "galasa-ras.artifacts",
					"when": "view == galasa-ras"
				},
				{
					"command": "galasa-ras.delete",
					"when": "view == galasa-ras"
				},
				{
					"command": "galasa-artifacts.open",
					"when": "view == galasa-artifacts && viewItem == file",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "gulp build",
		"watch": "tsc -watch -p ./"
	},
	"extensionDependencies": [
		"vscjava.vscode-java-pack"
	],
	"dependencies": {
		"@types/rimraf": "^3.0.0",
		"@types/unzipper": "^0.10.3",
		"@types/vscode": "^1.44.0",
		"glob": "^7.1.6",
		"gulp": "^4.0.2",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"typescript": "^3.8.3",
		"unzipper": "^0.10.11"
	},
	"devDependencies": {
		"@types/node": "^13.13.5",
		"@types/vscode": "^1.44.0",
		"glob": "^7.1.6",
		"typescript": "^3.8.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/galasa-dev/vscode.git"
	}
	
}